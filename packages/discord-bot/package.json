{
  "name": "@mariozechner/pi-discord",
  "version": "0.25.0",
  "description": "Discord bot powered by Claude AI for pi-mono",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "pi-discord": "./dist/main.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc && chmod +x dist/main.js",
    "dev": "tsx --watch src/main.ts",
    "start": "node dist/main.js",
    "migrate": "tsx src/migrate.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "test": "vitest --run",
    "type-check": "tsc --noEmit",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "@anthropic-ai/claude-code": "^2.0.69",
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.19.0",
    "@gradio/client": "^2.0.0",
    "@mariozechner/pi-agent-core": "^0.27.1",
    "@mariozechner/pi-ai": "^0.27.1",
    "@mariozechner/pi-coding-agent": "^0.27.1",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@opencode-ai/sdk": "^1.0.180",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@sinclair/typebox": "^0.34.0",
    "@slack/bolt": "^4.6.0",
    "@slack/web-api": "^7.13.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.6.2",
    "croner": "^9.1.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "https-proxy-agent": "^5.0.1",
    "livekit-server-sdk": "^2.15.0",
    "mcp-client": "^1.13.1",
    "minimatch": "^10.1.1",
    "node-cron": "^4.2.1",
    "prism-media": "^1.3.5",
    "socks-proxy-agent": "^8.0.5",
    "suno-api": "^0.9.3",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^22.19.2",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode-terminal": "^0.12.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "discord",
    "bot",
    "claude",
    "ai",
    "pi-mono"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "optionalDependencies": {
    "livekit-client": "^2.16.1"
  }
}
