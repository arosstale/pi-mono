# AI Trading Agent Configuration
# Copy to .env and fill in your values
# SECURITY: Never commit .env to version control!

#==============================================================================
# REQUIRED - Bot won't start without these
#==============================================================================

# Discord Bot Token (from Discord Developer Portal)
DISCORD_BOT_TOKEN=your-discord-bot-token

# At least ONE AI provider is required
OPENROUTER_API_KEY=sk-or-v1-xxxx

#==============================================================================
# AI PROVIDERS (configure based on your needs)
#==============================================================================

# OpenRouter (recommended - 100+ models, good agentic performance)
OPENROUTER_API_KEY=sk-or-v1-xxxx

# Anthropic Direct (Claude models)
ANTHROPIC_API_KEY=sk-ant-xxxx

# Google AI (Gemini models)
GEMINI_API_KEY=AIzaSy-xxxx
GOOGLE_API_KEY=AIzaSy-xxxx

# Groq (fast inference, free tier)
GROQ_API_KEY=gsk_xxxx

# Cerebras (fastest inference - 2100+ tok/s)
CEREBRAS_API_KEY=csk-xxxx

# NVIDIA NIM (build.nvidia.com - free tier)
NVIDIA_API_KEY=nvapi-xxxx

# Z.ai GLM-4.6 (coding specialist, used by OpenHands)
ZAI_API_KEY=xxxx

# OpenAI Direct
OPENAI_API_KEY=sk-xxxx

# DeepSeek (used by Swarm Agent for multi-LLM consensus)
DEEPSEEK_API_KEY=sk-xxxx

# OpenCode Zen (FREE models: Grok Code Fast 1, MiniMax M2.1, Big Pickle)
# Get key from https://opencode.ai/docs/zen
OPENCODE_ZEN_API_KEY=sk-xxxx

# Hugging Face (model access, spaces)
HF_TOKEN=hf_xxxx
HUGGINGFACE_TOKEN=hf_xxxx

# Default provider selection
DEFAULT_PROVIDER=openrouter
DEFAULT_MODEL=anthropic/claude-3.5-sonnet

#==============================================================================
# SEARCH & DATA PROVIDERS
#==============================================================================

# Exa AI (semantic search, code search)
EXA_API_KEY=xxxx

# Bright Data (web scraping, SERP)
BRIGHTDATA_API_TOKEN=xxxx

# YouTube Data API
YOUTUBE_API_KEY=AIzaSy-xxxx

#==============================================================================
# CREATIVE TOOLS
#==============================================================================

# Fal.ai - Image generation, video, 3D, upscaling
FAL_KEY=xxxx-xxxx
FAL_API_KEY=xxxx-xxxx

# Suno - AI Music generation
SUNO_API_KEY=xxxx

# ElevenLabs - Voice synthesis
ELEVENLABS_API_KEY=xxxx

# Luma Labs - Video generation
LUMA_API_KEY=xxxx
LUMALABS_API_KEY=xxxx

# Mubert - AI Music
MUBERT_API_KEY=xxxx

#==============================================================================
# REAL-TIME VOICE/VIDEO (LiveKit)
#==============================================================================

LIVEKIT_URL=wss://your-instance.livekit.cloud
LIVEKIT_HOST=wss://your-instance.livekit.cloud
LIVEKIT_API_KEY=APIxxxx
LIVEKIT_API_SECRET=xxxx

#==============================================================================
# INTEGRATIONS
#==============================================================================

# GitHub (repo operations, PRs, issues)
GITHUB_TOKEN=ghp_xxxx

# Twitter/X API (full access for posting)
TWITTER_BEARER_TOKEN=xxxx
TWITTER_API_KEY=xxxx
TWITTER_API_SECRET=xxxx
TWITTER_ACCESS_TOKEN=xxxx
TWITTER_ACCESS_TOKEN_SECRET=xxxx

# Telegram (message bridging)
TELEGRAM_BOT_TOKEN=xxxx:xxxx

#==============================================================================
# DISCORD CHANNEL ROUTING
#==============================================================================

# Primary channel for automated messages (fallback for all types)
REPORT_CHANNEL_ID=your-discord-channel-id

# Multi-channel routing (optional - falls back to REPORT_CHANNEL_ID)
ALERTS_CHANNEL_ID=         # High priority alerts and warnings
SIGNALS_CHANNEL_ID=        # Trading signals and market notifications
REPORTS_CHANNEL_ID=        # Scheduled reports and analytics
LOGS_CHANNEL_ID=           # Audit logs and system events
NEWS_CHANNEL_ID=           # News feed messages

#==============================================================================
# SECURITY
#==============================================================================

# Restrict bot to specific Discord user IDs (comma-separated)
# Leave empty to allow all users
ALLOWED_USER_IDS=

# Webhook API Key (for authenticating incoming webhooks)
WEBHOOK_API_KEY=your-secure-random-key

#==============================================================================
# SERVER CONFIGURATION
#==============================================================================

# Webhook server port
WEBHOOK_PORT=3001

# Dashboard/metrics port
DASHBOARD_PORT=9090
METRICS_PORT=9090

# Database path (SQLite)
DB_PATH=/opt/discord-bot-data/bot.db

#==============================================================================
# TRADING - MoonDev-Style Agents
#==============================================================================

# Arkham Intelligence (whale tracking, smart money analytics)
# https://arkham.com/api-docs
ARKHAM_API_KEY=xxxx

# Polygon.io (market data)
# POLYGON_API_KEY=xxxx

# Alpaca (paper trading)
# ALPACA_API_KEY=xxxx
# ALPACA_API_SECRET=xxxx
# ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Binance (crypto trading)
# BINANCE_API_KEY=xxxx
# BINANCE_API_SECRET=xxxx

# CoinGlass (derivatives data, exchange flows)
# COINGLASS_API_KEY=xxxx
